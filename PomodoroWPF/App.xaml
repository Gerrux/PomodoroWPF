<Application x:Class="PomodoroWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PomodoroWPF"
             StartupUri="\Views\MainWindow.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
            <FontFamily x:Key="DigitalNumbers">./Assets/Fonts/digitalnumbers-regular.ttf#Digital Numbers</FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Assets\BgStyleDictionary.xaml"/>
                <ResourceDictionary Source="\Assets\MiniButtonStyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
